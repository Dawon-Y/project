    <%
        // 세션 가져오기
        HttpSession userSession = request.getSession(false); // 세션이 없으면 null 반환
        String userType = null;
        Boolean isLoggedIn = false;
        String previousPage = null;

        if (userSession != null) {
            userType = (String) userSession.getAttribute("userType");
            isLoggedIn = (Boolean) userSession.getAttribute("isLoggedIn");
            previousPage = (String) userSession.getAttribute("previousPage");
        }

        // 로그인되지 않았을 경우 기본값 설정
        if (userSession == null || !Boolean.TRUE.equals(isLoggedIn)) {
            isLoggedIn = false;
            userType = "guest";
        }

        // 적절한 헤더 로드
        String headerPage = "Header.jsp"; // 기본값
        if (Boolean.TRUE.equals(isLoggedIn)) {
            if ("admin".equals(userType)) {
                headerPage = "HeaderAdminLogin.jsp";
            } else if ("student".equals(userType)) {
                headerPage = "HeaderStudentLogin.jsp";
            }
        } else {
            if ("notice".equals(previousPage)) {
                headerPage = "HeaderStudent.jsp"; // notice 페이지 기본 헤더
            }
        }

        // 동적으로 헤더 페이지 포함
        request.getRequestDispatcher(headerPage).include(request, response);
    %>

