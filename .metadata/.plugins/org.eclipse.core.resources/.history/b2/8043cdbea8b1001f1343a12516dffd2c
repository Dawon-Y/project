function toggleImage() {
	const call = document.getElementById('call_img');
	
	if (call.style.display === 'none' || call.style.display === '') {
		call.style.display = 'block';
	} else {
		call.style.display = 'none';
	}
}

let serverTimeElement;

document.addEventListener("DOMContentLoaded", function () {
    const serverTimeElement = document.getElementById('server-time');

    if (!serverTimeElement) {
        console.error("server-time element not found in the DOM.");
        return;
    }

    function fetchServerTime() {
        const xhr = new XMLHttpRequest();
        xhr.open('GET', 'ServerTime.jsp', true); // ServerTime.jsp로 요청
        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4) { // 요청 완료 상태
                if (xhr.status === 200) { // HTTP 200 = 성공
                    try {
                        const serverTimeString = xhr.responseText.trim(); // 서버 응답 값
                        console.log("Server Response:", serverTimeString); // 응답 확인
                        const serverTime = new Date(serverTimeString); // Date 객체로 변환
                        updateTimeDisplay(serverTime); // 시간 업데이트
                    } catch (error) {
                        console.error("Date parsing failed:", error);
                        serverTimeElement.textContent = "Error parsing server time.";
                    }
                } else {
                    console.error("Failed to fetch server time. HTTP Status:", xhr.status);
                    serverTimeElement.textContent = "Failed to load server time. HTTP Status: " + xhr.status;
                }
            }
        };
        xhr.send();
    }

    function updateTimeDisplay(serverTime) {
        if (isNaN(serverTime.getTime())) {
            console.error("Invalid server time:", serverTime);
            serverTimeElement.textContent = "Invalid server time.";
            return;
        }

        // 시간을 "HH:mm:ss" 형식으로 표시
        const hours = serverTime.getHours().toString().padStart(2, '0');
        const minutes = serverTime.getMinutes().toString().padStart(2, '0');
        const seconds = serverTime.getSeconds().toString().padStart(2, '0');
        serverTimeElement.textContent = `${hours}:${minutes}:${seconds}`;
    }

    fetchServerTime(); // 초기 서버 시간 로드
});

</script>
</head>
