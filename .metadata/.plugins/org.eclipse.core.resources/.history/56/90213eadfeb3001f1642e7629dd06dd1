     <script>
        // 헤더 로드를 위한 JavaScript 함수
        function loadHeader() {
            // 세션 정보 또는 API를 통해 사용자 상태 확인
            const userSession = {
                isLoggedIn: false, // 서버에서 받아올 로그인 상태
                userType: 'guest', // 서버에서 받아올 사용자 유형
                previousPage: 'notice' // 이전 페이지 정보
            };

            let headerFile = 'Header.html'; // 기본 헤더 파일

            // 동적 헤더 결정
            if (userSession.isLoggedIn) {
                if (userSession.userType === 'admin') {
                    headerFile = 'HeaderAdminLogin.html';
                } else if (userSession.userType === 'student') {
                    headerFile = 'HeaderStudentLogin.html';
                }
            } else if (userSession.previousPage === 'notice') {
                headerFile = 'HeaderStudentLogin.html';
            }

            // 헤더 로드
            fetch(headerFile)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('header-container').innerHTML = data;
                })
                .catch(err => console.error('Error loading header:', err));
        }

        // 페이지 로드 시 헤더 로드
        window.onload = loadHeader;
    </script>
</head>
